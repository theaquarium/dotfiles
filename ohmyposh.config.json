{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "magenta",
          "foreground": "lightWhite",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " {{ .UserName }}@{{ .HostName }}{{ if eq .Shell \"pwsh\" }} ü™ê {{ else }} üêß {{ end }} ",
          "type": "session"
        },
        {
          "background": "blue",
          "foreground": "lightWhite",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "~",
            "style": "agnoster_short"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "cyan",
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "display_mode": "environment"
          },
          "style": "powerline",
          "template": " {{ if .Venv }}({{ .Venv }}) {{ end }} ",
          "type": "python"
        },
        {
          "background": "lightYellow",
          "background_templates": [
            "{{ if gt .StashCount 0 }}lightRed{{ end }}",
            "{{ if or (.Working.Changed) (.Staging.Changed) }}magenta{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}lightRed{{ end }}",
            "{{ if gt .Ahead 0 }}lightMagenta{{ end }}",
            "{{ if gt .Behind 0 }}lightMagenta{{ end }}"
          ],
          "foreground": "black",
          "leading_diamond": "\ue0b6",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "style": "powerline",
          "template": " {{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \ue0b1 ! {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \ue0b1 \u2713 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ue0b1 stash {{ .StashCount }}{{ end }} ",
          "trailing_diamond": "\ue0b4",
          "type": "git"
        },
        {
          "background": "green",
          "background_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "foreground": "lightWhite",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " {{ if gt .Code 0 }}√ó{{ else }}\u2713{{ end }} ",
          "trailing_diamond": "\ue0b4",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "darkGray",
          "style": "plain",
          "template": "\u276f ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "darkGray",
    "template": "\u276f "
  },
  "version": 2
}
