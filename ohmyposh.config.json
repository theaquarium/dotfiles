{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "darkGray",
    "template": "\u276F "
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "foreground",
          "background": "magenta",
          "leading_diamond": "ÓÇ∂",
          "trailing_diamond": "",
          "properties": {
            "template": "{{ .UserName }}@{{ .HostName }} ü™ê"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "foreground",
          "background": "blue",
          "properties": {
            "prefix": " ",
            "home_icon": "~",
            "folder_separator_icon": " \uE0b1 ",
            "style": "agnoster_short"
          }
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "black",
          "background": "cyan",
          "properties": {
            "display_mode": "environment",
            "template": "{{ if .Venv }}({{ .Venv }}) {{ end }}"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "black",
          "background": "lightYellow",
          "background_templates": [
            "{{ if gt .StashCount 0 }}lightRed{{ end }}",
            "{{ if or (.Working.Changed) (.Staging.Changed) }}magenta{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}lightRed{{ end }}",
            "{{ if gt .Ahead 0 }}lightMagenta{{ end }}",
            "{{ if gt .Behind 0 }}lightMagenta{{ end }}"
          ],
          "leading_diamond": "ÓÇ∂",
          "trailing_diamond": "ÓÇ¥",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "branch_max_length": 25,
            "template": "{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uE0b1 ! {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uE0b1 \u2713 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uE0b1 stash {{ .StashCount }}{{ end }}"
          }
        },
        {
          "type": "exit",
          "style": "diamond",
          "foreground": "foreground",
          "background": "green",
          "background_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "leading_diamond": "",
          "trailing_diamond": "\uE0B4",
          "properties": {
            "always_enabled": true,
            "template": "{{ if gt .Code 0 }}\u00D7{{ else }}\u2713{{ end }}"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "darkGray",
          "properties": {
            "prefix": "",
            "template": "\u276F"
          }
        }
      ]
    }
  ]
}
